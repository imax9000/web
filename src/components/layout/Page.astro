---
import "@shikijs/twoslash/style-rich.css";
import "../../assets/base.css";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Docs | Skyware",
	description =
		"Skyware is a collection of libraries for developing on Bluesky.",
} = Astro.props;
---

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="bg-gray-100 text-gray-900 min-h-screen">
		<slot />
	</body>
</html>
